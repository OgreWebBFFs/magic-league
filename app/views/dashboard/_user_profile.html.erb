<div class="dashboard-profile">
  <div class="dashboard-profile__user-details">
    <%= gravatar(user) %>
    <%= link_to 'Edit Account', [:edit, @user], class: 'dashboard-profile__edit-button button' if policy(@user).edit? %>
  </div>
  <%= react_component("TradeTracker", {
    userId: @user.id,
    currentUserId: current_user.id,
    tradesData: @user.trades_received_and_allowed_by_rarity
  }, {:style => "width: 100%"}) %>
</div>
