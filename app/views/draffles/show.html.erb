<% case @draffle.status
  when 'created', 'valid', 'invalid'%>
    <%= react_component("Draffles/DraffleEdit", {
      draffle: @draffle,
      participants: @participants,
      prizes: @prizes,
      isAdmin: current_user.admin,
      users: @users
    }) %>
  <% when 'started', 'paused' %>
    <%= react_component("Draffles/DraffleInProgress", {
      draffle: @draffle,
      draft_board: @board,
    }) %>
<% end %>
