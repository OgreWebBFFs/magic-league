<div class="cycling-background" style="background: url('<%= get_random_bg_image %>') 0% 0% / cover no-repeat;">
</div>
<div class="login">
  <div class="login-content">
    <h2 class="login-title">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="login_form-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <%= f.submit "Send me a reset email", class: "login_submit-btn" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
