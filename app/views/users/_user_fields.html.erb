<div class="dashboard_edit-user-details-form">
  <div class="dashboard_edit-user-details_gravatar">
    <%= gravatar(@user, 154) %>
    <%= link_to 'Edit Gravatar', 'https://en.gravatar.com/emails/',target: "_blank", class:'dashboard_edit-user-details_gravatar-btn'  %>
    <p>Gravatar may take a few mintues to update</p>          
  </div> 

  <div class="dashboard_edit-user-details_fields">
    <%= f.input :name %>
    <%= f.input :email %>
    <div class="dashboard_edit-user-details_buttons">
        <%= f.button :submit %>
    </div>
  </div>
</div>